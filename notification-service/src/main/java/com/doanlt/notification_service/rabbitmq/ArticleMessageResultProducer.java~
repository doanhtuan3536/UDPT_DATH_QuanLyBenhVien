package com.doanlt.notification_service.rabbitmq;

import org.springframework.amqp.rabbit.core.RabbitTemplate;
import org.springframework.amqp.support.converter.Jackson2JsonMessageConverter;
import org.springframework.stereotype.Service;

@Service
public class ArticleMessageResultProducer {
    private final RabbitTemplate rabbitTemplate;

    public ArticleMessageResultProducer(RabbitTemplate rabbitTemplate) {
        this.rabbitTemplate = rabbitTemplate;
    }

    public void sendArticleResultMessage(String msg) {
//        String message = "hehe test rabbitmq";
        rabbitTemplate.setMessageConverter(new Jackson2JsonMessageConverter());
        rabbitTemplate.convertAndSend(RabbitMQConfig.NOTIFICATION_EXCHANGE,
                RabbitMQConfig.ROUTING_KEY_ARTICLE_CREATE_RESULT_NOTIFICATION,
                msg);
    }
}
