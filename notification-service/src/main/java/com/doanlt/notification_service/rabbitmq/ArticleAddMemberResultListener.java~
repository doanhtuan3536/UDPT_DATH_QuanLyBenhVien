package com.doanlt.notification_service.rabbitmq;

import org.springframework.amqp.rabbit.annotation.RabbitListener;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.mail.javamail.JavaMailSender;
import org.springframework.stereotype.Service;

@Service
public class ArticleAddMemberResultListener {

    private final JavaMailSender mailSender;
    private final String emailFrom;

    public ArticleAddMemberResultListener(
            JavaMailSender mailSender,
            @Value("${spring.mail.username}") String emailFrom) {
        this.mailSender = mailSender;
        this.emailFrom = emailFrom;
    }

    @RabbitListener(queues = RabbitMQConfig.NOTIFICATION_ADD_MEMBER_RESULT_QUEUE)
    public void handleArticleAddMemberResult(ArticleAddMemberResultMessage msg) {
        System.out.println("Nhận message tạo article: " + msg);
        String subject = "New member added to article notification";
        String content = "Bài báo mới có sự tham gia của thành viên mới có username la: " + msg.getUserName() + " với tên đầy đủ là: " + msg.getFullName();
        

//        messagingTemplate.convertAndSend("/topic/articleResult", msg);
//        articleMessageResultProducer.sendArticleResultMessage("OK oc cut");
    }
}
