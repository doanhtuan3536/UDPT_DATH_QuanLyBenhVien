<script>
    // Thiết lập ngày tối thiểu là ngày mai
    document.addEventListener('DOMContentLoaded', function() {
        const tomorrow = new Date();
        tomorrow.setDate(tomorrow.getDate() + 1);

        const yyyy = tomorrow.getFullYear();
        const mm = String(tomorrow.getMonth() + 1).padStart(2, '0');
        const dd = String(tomorrow.getDate()).padStart(2, '0');

        const minDate = `${yyyy}-${mm}-${dd}`;
        document.getElementById('appointmentDate').min = minDate;

        // Xử lý khi chọn chuyên khoa
        document.getElementById('specialty').addEventListener('change', function() {
            // Có thể thêm logic để điều chỉnh giờ làm việc theo chuyên khoa
            console.log('Chuyên khoa đã chọn:', this.value);
        });
    });
</script>
